---
import type { CategoryEntry } from "../models";

import CategoryCollapsible from "./CategoryCollapsible.svelte";
import ChallengeComponent from "./ChallengeComponent.astro";

type Props = {
  category: CategoryEntry;
};

const category = Astro.props.category;
---

<CategoryCollapsible client:load title={category.data.name}>
  {
    category.data.challenges.map((challenge) => (
      <ChallengeComponent challenge={challenge} />
    ))
  }
</CategoryCollapsible>
