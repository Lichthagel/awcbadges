---
import BadgeCategory from "../components/CategoryComponent.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const allCategories = await getCollection("category");

const animeCategories = allCategories.filter((category) => {
	return category.data.type === "anime";
});

const mangaCategories = allCategories.filter((category) => {
	return category.data.type === "manga";
});
---

<BaseLayout>
	<div class="text-center">
		<h1 class="text-6xl my-10 uppercase font-bold">Anime</h1>
		{animeCategories.map((category) => <BadgeCategory category={category} />)}

		<h1 class="text-6xl my-10 uppercase font-bold">Manga</h1>
		{mangaCategories.map((category) => <BadgeCategory category={category} />)}
	</div>
</BaseLayout>
